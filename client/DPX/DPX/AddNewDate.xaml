<Window x:Class="DPX.AddNewDate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    Title="Add New Date" Height="300" Width="300">
    <StackPanel>
        <Button Name="buttonAddDate" Click="buttonAddDate_Click">Add Date</Button>
        <WindowsFormsHost>
            <wf:DateTimePicker x:Name="dateTimePicker" ValueChanged="dateTimePicker_ValueChanged"></wf:DateTimePicker>
        </WindowsFormsHost>
    </StackPanel>
</Window>
