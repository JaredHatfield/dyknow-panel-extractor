<Window x:Class="Preview.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="500" Width="550">
    <StackPanel Height="Auto" Width="Auto">
        <DockPanel Width="Auto">
            <Button Name="buttonLoad" Click="buttonLoadClick" MinWidth="100" MaxWidth="100" HorizontalAlignment="Left">Load</Button>
            <Button Name="buttonPrevious" Click="buttonPreviousClick" MinWidth="100" MaxWidth="100" HorizontalAlignment="Left">Previous</Button>
            <Button Name="buttonNext" Click="buttonNextClick" MinWidth="100" MaxWidth="100" HorizontalAlignment="Left">Next</Button>
            <Button Name="buttonExportImage" Click="buttonExportImageClick" MinWidth="100" MaxWidth="100" HorizontalAlignment="Left">Export Image</Button>
        </DockPanel>
        <Grid Height="Auto" Name="grid1" Width="Auto">
            <InkCanvas Name="Inky" Width="1024" Height="768" HorizontalAlignment="Left" VerticalAlignment="Top">
                <InkCanvas.LayoutTransform>
                    <ScaleTransform ScaleX=".50" ScaleY=".50" />
                </InkCanvas.LayoutTransform>
            </InkCanvas>
        </Grid>
    </StackPanel>
</Window>
