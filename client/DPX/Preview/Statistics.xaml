<Window x:Class="Preview.Statistics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Statistics" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel>
        <DockPanel>
            <Label Width="200">Number of Panels: </Label>
            <TextBox Name="textBoxNumberOfPanels"></TextBox>
        </DockPanel>
        <DockPanel>
            <Label Width="200">Mean Number of Strokes:</Label>
            <TextBox Name="textBoxMeanNumberOfStrokes"></TextBox>
        </DockPanel>
        <DockPanel>
            <Label Width="200">Standard Deviation of Strokes:</Label>
            <TextBox Name="textBoxStandardDeviationOfStrokes"></TextBox>
        </DockPanel>
        <DockPanel>
            <Label Width="200">Mean Length of Data:</Label>
            <TextBox Name="textBoxMeanLengthOfData"></TextBox>
        </DockPanel>
        <DockPanel>
            <Label Width="200">Standard Deviation of Data Length:</Label>
            <TextBox Name="textBoxStandardDeviationOfDataLength"></TextBox>
        </DockPanel>
    </StackPanel>
</Window>
