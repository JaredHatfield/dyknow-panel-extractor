<Window x:Class="DPXGrader.DPXGraderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dpx="clr-namespace:DPXGrader"
    Title="DPX Grader" Height="300" Width="300"
    Icon="Icon.ico">
    <DockPanel Name="myStackPanel" Height="Auto" Width="Auto">
        <Menu Height="22.22" Name="menu1" Width="Auto" DockPanel.Dock="Top">
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="DisplayAboutWindow"/>
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Left">
            <Button Name="ButtonAccuracy" Margin="10" Click="ButtonAccuracy_Click">Accuracy Test</Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Right">
            
        </StackPanel>
    </DockPanel>
</Window>
