<Window x:Class="HandwritingAccuracy.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings" Height="330" Width="340">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="100" FontWeight="Bold">Database Name:</Label>
            <TextBox Name="TextBoxDatabaseName" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="100" FontWeight="Bold">User Name:</Label>
            <TextBox Name="TextBoxUserName" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="100" FontWeight="Bold">Password:</Label>
            <TextBox Name="TextBoxPassword" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="100" FontWeight="Bold">Port Number:</Label>
            <TextBox Name="TextBoxPortNumber" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="100" FontWeight="Bold">Host:</Label>
            <TextBox Name="TextBoxHost" Width="200"></TextBox>
        </StackPanel>
        <Button Name="ButtonSave" Margin="20" Click="ButtonSave_Click">Save</Button>
    </StackPanel>
</Window>
