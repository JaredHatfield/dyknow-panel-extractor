<Window x:Class="Preview.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="500" Width="550">
    <StackPanel Name="myStackPanel" Height="Auto" Width="Auto">
        <Menu Height="22.22" Name="menu1" Width="Auto">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="buttonLoadClick" />
                <MenuItem Header="_Export Image" Click="buttonExportImageClick" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="DisplayAboutWindow"/>
            </MenuItem>
        </Menu>
        <InkCanvas Name="Inky" Width="1024" Height="768" HorizontalAlignment="Left" VerticalAlignment="Top">
            <InkCanvas.LayoutTransform>
                <ScaleTransform ScaleX=".50" ScaleY=".50" />
            </InkCanvas.LayoutTransform>
        </InkCanvas>
        <DockPanel Width="Auto">
            <Button Name="buttonPrevious" Click="buttonPreviousClick" Width="100" DockPanel.Dock="Left">Previous</Button>
            <Button Name="buttonNext" Click="buttonNextClick" HorizontalAlignment="Right" Width="100" DockPanel.Dock="Right">Next</Button>
            <Label Name="labelPageNumber" HorizontalAlignment="Center" DockPanel.Dock="Bottom">0 of 0</Label>
        </DockPanel>
    </StackPanel>
</Window>
