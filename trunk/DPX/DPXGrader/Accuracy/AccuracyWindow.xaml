<Window x:Class="DPXGrader.Accuracy.AccuracyWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AccuracyWindow" Height="600" Width="600">
    <StackPanel>
        <StackPanel Orientation="Vertical">
            <Border Margin="10" BorderBrush="Blue" BorderThickness="2">
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="30" FontWeight="Bold" Margin="0,0,20,0">Write the Following:</Label>
                    <Label Name="LabelPrompt" FontSize="30"></Label>
                </StackPanel>
            </Border>
            <Border Margin="10" BorderBrush="Black" BorderThickness="2">
                <InkCanvas Name="Inky" Height="150" />
            </Border>
            <DockPanel>
                <Button Name="ButtonConfirm" Margin="10" Width="150" Height="40" DockPanel.Dock="Right" Click="ButtonConfirm_Click">Confirm</Button>
                <Button Name="ButtonClear" Margin="10" Width="150" Height="40" DockPanel.Dock="Left" Click="ButtonClear_Click">Clear</Button>
                <Separator></Separator>
            </DockPanel>
        </StackPanel>
        <TextBox Name="TextBoxResults" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
    </StackPanel>
</Window>
