<Window x:Class="HandwritingAccuracy.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LoginWindow" Height="300" Width="350">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="80">Tablet PC: </Label>
            <ComboBox Name="ComboBoxTablet" Width="200" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="80">First Name:</Label>
            <TextBox Name="TextBoxFirstName" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="80">Last Name:</Label>
            <TextBox Name="TextBoxLastName" Width="200" />
        </StackPanel>
        <Button Name="ButtonLogin" Margin="10" Width="200" Click="ButtonLogin_Click">Login</Button>
    </StackPanel>
</Window>
